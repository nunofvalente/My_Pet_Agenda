<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.nunovalente.android.mypetagenda.util.StringGenerator"/>

        <variable
            name="pet"
            type="com.nunovalente.android.mypetagenda.model.Pet" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_16"
        tools:context=".fragments.PetInformationFragment">

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:text="@string/age"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toEndOf="@+id/tv_pet_age"
            app:layout_constraintStart_toStartOf="@+id/tv_pet_age"
            app:layout_constraintTop_toBottomOf="@+id/tv_pet_age" />

        <TextView
            android:id="@+id/tv_pet_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12" />


        <View
            android:layout_width="3dp"
            android:layout_height="35dp"
            android:background="@color/app_primary_light"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toStartOf="@+id/tv_profile_birthday"
            app:layout_constraintStart_toEndOf="@+id/tv_pet_age"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/birthday"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintEnd_toEndOf="@+id/tv_profile_birthday"
            app:layout_constraintStart_toStartOf="@+id/tv_profile_birthday"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_birthday" />

        <TextView
            android:id="@+id/tv_profile_birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{pet.birthday}"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12/05/2020" />

        <View
            android:layout_width="3dp"
            android:layout_height="35dp"
            android:layout_marginTop="16dp"
            android:background="@color/app_primary_light"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toStartOf="@+id/tv_weight_measure"
            app:layout_constraintStart_toEndOf="@+id/tv_profile_birthday"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.55" />

        <TextView
            android:id="@+id/tv_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/weight"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintEnd_toEndOf="@+id/tv_weight_measure"
            app:layout_constraintStart_toStartOf="@+id/tv_weight_measure"
            app:layout_constraintTop_toBottomOf="@+id/tv_weight_measure" />

        <TextView
            android:id="@+id/tv_weight_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="@{StringGenerator.getPetWeightBuilder(pet.weight)}"
            android:textSize="@dimen/text_size_18"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="4.4Kg" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/type"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintEnd_toEndOf="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/editText2"
            app:layout_constraintTop_toBottomOf="@+id/editText2" />

        <TextView
            android:id="@+id/editText2"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@{pet.type}"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            tools:text="Dog" />

        <View
            android:id="@+id/view3"
            android:layout_width="3dp"
            android:layout_height="35dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="38dp"
            android:background="@color/app_primary_light"
            app:layout_constraintEnd_toStartOf="@+id/edit_information_breed"
            app:layout_constraintStart_toEndOf="@+id/editText2"
            app:layout_constraintTop_toTopOf="@+id/guideline6" />

        <TextView
            android:id="@+id/tv_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/breed"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintEnd_toEndOf="@+id/edit_information_breed"
            app:layout_constraintStart_toStartOf="@+id/edit_information_breed"
            app:layout_constraintTop_toBottomOf="@+id/edit_information_breed" />


        <TextView
            android:id="@+id/edit_information_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="@{pet.breed}"

            android:textSize="@dimen/text_size_20"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            tools:text="Pomeranian" />

        <ProgressBar
            android:id="@+id/progress_pet_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="189dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="200dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>