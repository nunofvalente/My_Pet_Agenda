<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="pet"
            type="com.nunovalente.android.mypetagenda.model.Pet" />

        <variable
            name="imageUrlPet"
            type="String" />

        <variable
            name="clickHandler"
            type="com.nunovalente.android.mypetagenda.fragments.PetProfileFragment.PetProfileFragmentClickHandler" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

         <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|bottom"
                android:gravity="center"
                android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_details"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/app_primary_light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pet_profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_16"
                android:transitionName="@string/pet_image"
                app:imageUrlPet="@{pet.imagePath}"
                tools:src="@drawable/default_image" />

            <TextView
                android:id="@+id/pet_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="center"
                android:text="@{pet.name}"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                tools:text="Balto" />

        </com.google.android.material.appbar.AppBarLayout>

        <com.ogaclejapan.smarttablayout.SmartTabLayout
            android:id="@+id/smart_tab_pet_profile"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/app_primary_light"
            android:elevation="4dp"
            app:stl_clickable="true"
            app:stl_defaultTabBackground="?attr/selectableItemBackground"
            app:stl_defaultTabTextAllCaps="true"
            app:stl_defaultTabTextColor="@color/white"
            app:stl_defaultTabTextHorizontalPadding="16dp"
            app:stl_defaultTabTextMinWidth="0dp"
            app:stl_defaultTabTextSize="@dimen/text_size_14"
            app:stl_distributeEvenly="true"
            app:stl_dividerColor="@color/app_primary_dark"
            app:stl_dividerThickness="1dp"
            app:stl_drawDecorationAfterTab="false"
            app:stl_indicatorAlwaysInCenter="false"
            app:stl_indicatorColor="@color/app_primary_dark"
            app:stl_indicatorCornerRadius="2dp"
            app:stl_indicatorGravity="bottom"
            app:stl_indicatorInFront="false"
            app:stl_indicatorInterpolation="smart"
            app:stl_indicatorThickness="4dp"
            app:stl_indicatorWidth="auto"
            app:stl_indicatorWithoutPadding="false"
            app:stl_overlineColor="#4D000000"
            app:stl_overlineThickness="0dp"
            app:stl_titleOffset="24dp"
            app:stl_underlineColor="#4D000000"
            app:stl_underlineThickness="1dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_pet_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp" />

    </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="138dp"
            android:layout_gravity="end|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            fab:menu_colorNormal="#DA4336"
            fab:menu_colorPressed="#E75043"
            fab:menu_colorRipple="#99FFFFFF"
            fab:menu_fab_size="normal"
            fab:menu_icon="@drawable/fab_add"
            fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
            fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
            fab:menu_labels_showShadow="true"
            fab:menu_labels_singleLine="false"
            fab:menu_labels_textColor="#FFFFFF"
            fab:menu_labels_textSize="14sp"
            fab:menu_openDirection="up">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_pet_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit"
                android:onClick="@{clickHandler::editProfile}"
                fab:fab_colorNormal="@color/app_primary_dark"
                fab:fab_label="Profile"
                fab:fab_size="mini"
                tools:ignore="VectorDrawableCompat" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_pet_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_note"
                app:fab_colorNormal="@color/app_primary"
                fab:fab_label="@string/fab_note"
                fab:fab_size="mini"
                android:onClick="@{clickHandler::openNoteDialog}"
                tools:ignore="VectorDrawableCompat" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fab_pet_reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_reminder"
                fab:fab_colorNormal="@color/app_primary_light"
                android:onClick="@{clickHandler::addReminder}"
                fab:fab_label="Reminder"
                fab:fab_size="mini"
                tools:ignore="VectorDrawableCompat" />

        </com.github.clans.fab.FloatingActionMenu>


</FrameLayout>
    </layout>